# Database connection string (e.g., PostgreSQL)
DATABASE_URL="your_database_connection_string_here"

# Resend API Key for sending emails
RESEND_API_KEY="your_resend_api_key_here"

# Cloudinary Credentials for Media Management (Cloud Name needed client-side)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# NextAuth Credentials
NEXTAUTH_URL="http://localhost:3000" # Change for production
NEXTAUTH_SECRET="generate_a_strong_secret_here" # Use `openssl rand -base64 32`

# TapPay Credentials (Adjust prefix if App Key isn't needed client-side)
TAPPAY_PARTNER_KEY="your_tappay_partner_key"
TAPPAY_APP_ID="your_tappay_app_id"
NEXT_PUBLIC_TAPPAY_APP_KEY="your_tappay_app_key"